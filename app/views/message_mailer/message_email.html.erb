<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

<h1>Message</h1>
<h4>Topic</h4>
<%= @message.topic %>
<h4>Description</h4>
<%= @message.description %>
<h4>From</h4>
<%= @message.user.first_name %> <%= @message.user.last_name %>

<%#= cl_image_tag(@message.photo_in_database, width:100, height: 100) %>
<h4>Attachments</h4>
<% @message.message_attachments.each do |attachment| %>
<%= cl_image_tag(attachment.attachment_in_database, width: 100, height:100 ) %>
<% end %>
    </div>
  </div>
</div>

